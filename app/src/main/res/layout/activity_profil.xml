<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil"
    android:orientation="vertical"
    android:background="@mipmap/background"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="70dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@mipmap/foto_profile"
        android:layout_marginTop="0dp"
        />
    <TextView
        android:id="@+id/txtnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/style_button_white"
        android:ems="10"
        android:fontFamily="@font/catamaran_medium"
        android:text="   Nama : I Gede Aksel Pratama"
        android:paddingLeft="0dp"
        android:textColor="#292828"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/style_button_white"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txtnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/catamaran_medium"
            android:text="   NIM : "
            android:paddingLeft="0dp"
            android:textColor="#292828"
            />

        <TextView
            android:id="@+id/txtuserprofile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-185dp"
            android:fontFamily="@font/catamaran_medium"
            android:textColor="#292828" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtjurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_button_white"
        android:ems="10"
        android:fontFamily="@font/catamaran_medium"
        android:text="   Jurusan : TI-MTI "
        android:paddingLeft="0dp"
        android:textColor="#292828"
        />




</LinearLayout>